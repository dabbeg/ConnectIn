@model ConnectIn.Models.ViewModels.UserViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit your account</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" id="EditName" name="Name" class="form-control" />
            </div>
        </div>


       <!-- <div class="form-group">
            @Html.LabelFor(model => model.UserName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" id="EditUserName" name="UserName" class="form-control" />
            </div>
        </div>-->
        <div class="form-group">
            @Html.LabelFor(model => model.ProfilePicture, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" id="EditUserProfile" name="UserProfile" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Gender, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <span>Male:</span>
                <input type="radio" id="EditGender" name="Gender" />
                &nbsp;
                <span>Female:</span>
                <input type="radio" id="EditGender" name="Gender" />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Work, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" id="EditWork" name="Work" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.School, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" id="EditSchool" name="School" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Address, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" id="EditAddress" name="Address" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to News feed", "Index", "Home")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
