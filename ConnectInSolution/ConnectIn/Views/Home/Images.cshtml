@using Microsoft.AspNet.Identity
@model ConnectIn.Models.ViewModels.PhotoAlbumViewModel

@{
    ViewBag.Title = "Images";
}

<h2>Images</h2>
<div class="container">
<div class="row">
    @foreach (var item in Model.Images)
    {
        <div class="col-xs-6 col-md-3">
            <a href="#" id="@item.PhotoId" class="thumbnail">
                <img src="@item.ImagePath" alt="userPhoto" />
            </a>
        </div>
    }
</div>
@if (Model.UserId == User.Identity.GetUserId())
{
    <div class="btnUpload">
        @using (Html.BeginForm("UploadImage", "Home", FormMethod.Get))
        {
            <button type="submit" class="btn btn-primary">Upload Photo</button>
        }
    </div>

    <div class="btnProfile">
        @using (Html.BeginForm("PickProfilePicture", "Home", FormMethod.Post))
        {
            <input type="hidden" id="photoId" name="photoId" value="PUT PHOTOID" />
            <button type="submit" class="btn btn-primary">Pick as Profile Picture</button>
        }
    </div>
    <div class="btnCover">
        @using (Html.BeginForm("PickCoverPhoto", "Home", FormMethod.Post))
{
    <input type="hidden" id="photoId2" name="photoId2" value="PUT PHOTO" />
    <button type="submit" class="btn btn-primary">Pick as Cover Picture</button>
}
    </div>
    
   
}
</div>

