@model ConnectIn.Models.Entity.Group

@{
    ViewBag.Title = "Create";
}

<h2>Create a group</h2>


@using (Html.BeginForm("Create", "Group")) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                <input type="text" required class="form-control" id="groupnameinput" name="groupName" style="display: inline; max-width: 222px;" maxlength=30 />
            </div>
            
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @using (Html.BeginForm("GroupsList", "Group", FormMethod.Get))
    {
        <button type="submit" class="btn btn-default" style="position: relative; left: 21px;">Back to list</button>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
