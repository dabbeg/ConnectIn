@model IEnumerable<ConnectIn.Models.ViewModels.GroupDetailViewModel>

@{
    ViewBag.Title = "GroupDetails";
}

<h2>@Model.First().Name</h2>

<div>
    <h4>Members:</h4>
</div>
<div class="well" id="membersDiv">
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Birthday:</th>
                <th>Username:</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var member in Model)
            {
                <tr>
                    <td>@member.User.Name</td>
                    <td>@member.User.Birthday</td>
                    <td>@member.User.UserName</td>
                </tr>
            }
        </tbody>

    </table>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.First().GroupId }) |
    @Html.ActionLink("Back to List", "GroupsList")
</p>
