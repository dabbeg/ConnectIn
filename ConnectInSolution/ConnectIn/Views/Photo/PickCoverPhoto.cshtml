@model ConnectIn.Models.Entity.Photo

@{
    ViewBag.Title = "PickCoverPhoto";
}

<h2>PickCoverPhoto</h2>

<div id="cropPhoto">
    <img src="@Model.PhotoPath" alt="Your soon to be cover photo"/>
</div>



@using (Html.BeginForm("CropImage", "Photo", FormMethod.Post))
{
    <input type="hidden" id="location" name="location" value="cover"/>
    <input type="hidden" id="photoId" name="photoId" value="@Model.PhotoId" />
    <input type="hidden" id="imageCropWidth" name="imageCropWidth" value="">
    <input type="hidden" id="imageCropHeight" name="imageCropHeight" value="">
    <input type="hidden" id="cropPointX" name="cropPointX" value="">
    <input type="hidden" id="cropPointY" name="cropPointY" value="">
    <button type="submit" class="btn">Submit</button>
   
    
}

@section scripts{

    <script type="text/javascript">
        var imageCropWidth = 0;
        var imageCropHeight = 0;
        var cropPointX = 0;
        var cropPointY = 0;

        function resizeImage(orgwidth, orgheight) {
            jcrop_api.destroy();

            var value = $('#imageslider').slider('option', 'value');
            var width = orgwidth * (value / 100);
            var height = orgheight * (value / 100);
            $('#cropbox').width(width);
            $('#cropbox').height(height);
            $('#rw').val(width);
            $('#rh').val(height);

            initJcrop();

        }


        $(document).ready(function () {
            initCrop();
        });

        function initCrop() {
            $("#cropPhoto").Jcrop({
                onChange: setCoordsAndImgSize,
                aspectRatio: 1145 / 435,
            });
        }

        function setCoordsAndImgSize(e) {

            imageCropWidth = e.w;
            imageCropHeight = e.h;

            cropPointX = e.x;
            cropPointY = e.y;

            document.getElementById("imageCropWidth").value = imageCropWidth;
            document.getElementById("imageCropHeight").value = imageCropHeight;
            document.getElementById("cropPointX").value = cropPointX;
            document.getElementById("cropPointY").value = cropPointY;
        }



    </script>
}
