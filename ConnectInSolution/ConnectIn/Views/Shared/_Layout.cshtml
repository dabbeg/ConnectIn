@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="@Url.Content("~/icon.ico")"/>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <title>Connectin</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>  
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
    </button>
    

    <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
            <li>@Html.ActionLink(" ", "NewsFeed", "Home", new { area = "" }, new { @class = "navbar-brand pull-left" })</li>
            @if (Request.IsAuthenticated)
            {
                <li>@Html.ActionLink(@String.Format("Hello, {0}", User.Identity.GetUserName().Substring(0, (User.Identity.GetUserName().IndexOf('@') == -1 ? User.Identity.GetUserName().Length : User.Identity.GetUserName().IndexOf('@')))), "Profile", "Home", new {id = @User.Identity.GetUserId()}, null)</li>
            }
        </ul>
    </div>
    
        </div>
        <div class="navbar-collapse collapse">

            <ul class="nav navbar-nav navbar-right">
                @if (Request.IsAuthenticated)
                {
                    <li>@Html.ActionLink("Home", "NewsFeed", "Home")</li>
                    <li>@Html.ActionLink("Profile", "Profile", "Home", new {id = @User.Identity.GetUserId()}, null)</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"> <span class="glyphicons glyphicons-user"></span> <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Settings", "Manage", "Account")</li>
                            <li>@Html.Partial("_LoginPartial")</li>
                        </ul>
                    </li>
                }
                else
                {
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.Partial("_LoginPartial")</li>
                }
            </ul>

        </div>
        </div>
    </div>

@if (Request.IsAuthenticated)
{ 
            <!-- Sidebar -->

        <nav class="main-menu">
            <ul>
                <li class="has-subnav">
                    <a href="#Search">
                        <i class="fa fa-search fa-2x"></i>

                        <span class="nav-text">
                            @using (Html.BeginForm("Search", "Home"))
                            {
                                <div class="form-horizontal">
                                    <input type="text" placeholder="Search..." class="search-form-control" name="status" />
                                    <button type="submit" id="submitstatus" class="btn btn-primary" style="display: none;"></button>
                                </div>
                            }

                        </span>
                    </a>
                </li>
                <li class="has-subnav">
                    <a href="/Home/NewsFeed">
                        <i class="fa fa-newspaper-o fa-2x"></i>
                        <span class="nav-text">News Feed</span>
                    </a>
                    @Html.ActionLink(" ", "NewsFeed", "Home")
                </li>
                <li class="has-subnav">
                    <a href="/Home/Friendslist">
                        <i class="fa fa-user fa-2x"></i>
                        <span class="nav-text">Friends</span>
                    </a>
                    @Html.ActionLink(" ", "FriendsList", "Home")
                </li>
                <li class="has-subnav">
                    <a href="/Group/GroupsList">
                        <i class="fa fa-group fa-2x"></i>
                        <span class="nav-text">Groups</span>
                    </a>
                    @Html.ActionLink(" ", "GroupsList", "Group")
                </li>
                <li class="has-subnav">
                    <a href="/Home/Birthdays">
                        <i class="fa fa-birthday-cake fa-2x"></i>
                        <span class="nav-text">Birthdays</span>
                    </a>
                    @Html.ActionLink(" ", "Birthdays", "Home")
                </li>
                <li class="has-subnav">
                    <a href="/Home/Notifications">
                        <i class="fa fa-bell fa-2x"></i>
                        <span class="nav-text">Notifications</span>
                    </a>
                    @Html.ActionLink(" ", "Notifications", "Home")
                </li>

            </ul>
            <ul class="logout">
                <li>
                    <a href="">
                        <i class="fa fa-power-off fa-2x"></i>
                        <span class="nav-text">
                            <span style="display:none;">@Html.Partial("_LoginPartial")</span>
                        </span>
                    </a>
                </li>
            </ul>

        </nav>
            <!-- /#sidebar-wrapper -->
}
<div class="area">

    <div class="col-lg-12">
        <div class="container body-content">
            @RenderBody()
            <hr/>
            <footer>
                <p>&copy; @DateTime.Now.Year - ConnectIn</p>
            </footer>
        </div>
    </div>
</div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
